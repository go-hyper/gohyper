{
  "manifest_version": 2,

  "name": "Test",
  "description": "This is a test version.",
  "version": "1.0",
  "version_name": "1.0 beta",

  "icons": {
    "16": "images/test.png",
    "32": "images/test.png",
    "48": "images/test.png",
    "128": "images/test.png"
  },

  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "storage",
    "contextMenus"
  ],

  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },

  "options_ui": {
    "page": "popup.html"
  },

  "browser_action": {
    "default_icon": {
      "19": "images/test.png",
      "38": "images/test.png"
    },
    "default_title": "Test Tooltip!",
    "default_popup": "popup.html"
  }
}
