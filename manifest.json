{
  "manifest_version": 2,

  "name": "GoHyper",
  "description": "This is a prototype of GoHyper.",
  "version": "1.0",
  "version_name": "GoHyper alpha",
  "homepage_url": "https://github.com/jengeb/gohyper",

   "applications": {
     "gecko": {
       "id": "gohyper@mozilla.org"
     }
   },

  "icons": {
    "16": "images/gohyper.png",
    "32": "images/gohyper.png",
    "48": "images/gohyper.png",
    "128": "images/gohyper.png"
  },

  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "storage",
    "contextMenus",
    "webNavigation"
  ],

  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["bower_components/rangy/rangy-core.js", "bower_components/rangy/rangy-classapplier.js",
        "bower_components/rangy/rangy-highlighter.js", "bower_components/rangy/rangy-serializer.js", "js/content.js"]
    }
  ],

  "browser_action": {
    "default_icon": {
      "19": "images/gohyper.png",
      "38": "images/gohyper.png"
    },
    "default_title": "GoHyper",
    "default_popup": "popup.html"
  }
}
